@{
    ViewBag.Title = "Home Page";
}

<img class="ode2food" src="~/img/kringel.png" alt="Alternate Text" />

@model IEnumerable<OdeToFood.Models.RestaurantListViewModel>

<form method="get">

    <input type="search" name="searchTerm" />
    <input class="search-by-name" type="submit" value="Search by name" />
</form>

@foreach (var item in Model)
{
    <div>
        <h4>@item.Name</h4>
        <div>@item.City, @item.Country</div>
        <div>Reviews: @item.CountOfReviews</div>
        <hr />
    </div>
}

<form action="/food/japanese/sushi" method="post" class="seafood-form">
    <span class="orderit">Order some nice seafood of your choosing!</span> <br />
    <input class="order-btn" type="submit" value="Order" />
</form>